# ShackMate Docker Environment Variables
# Copy this file to .env and customize for your environment

# Timezone Configuration
TZ=America/New_York

# Web Server Configuration
WEB_PORT=80
HTTPS_PORT=443

# SMB/CIFS Configuration (for file sharing)
SMB_PORT_139=139
SMB_PORT_445=445

# UDP Listener Configuration
UDP_PORT=4210

# Monitoring Configuration (if enabled)
PORTAINER_PORT=9000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=secure_admin_password

# Container Resource Limits
MEMORY_LIMIT=512m
CPU_LIMIT=1.0

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Development/Debug Mode
DEBUG=false
DEV_MODE=false
